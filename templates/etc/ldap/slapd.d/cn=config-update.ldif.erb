changetype: modify
<% cnconfig_attrs.each_pair |key, value| %>

  <% if cnconfig_default_attrs.include?(key) and value <> '' %>
    replace: <%= key %>
    <%= key %>: <%= value %>
    -
  <% elsif cnconfig_attrs.include?(key) and value == '' %>
    delete: <%= key %>
    -
  <% else %>
    add: <%= key %>
    <%= key %>: <%= value %>
    -
  <% end %>

<% end %>
